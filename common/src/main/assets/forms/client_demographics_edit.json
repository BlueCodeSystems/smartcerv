{
  "attributes": {
    "panelType": "form",
    "formType": "demographics",
    "submitLabel": "Submit"
  },
  "widgetGroup": [
    {
      "title": "Demographics",
      "widgets": [
        {
          "label": "Client's names",
          "widgetType": "TextView",
          "textSize": 24,
          "weight": 1
        },
        {
          "widgetType": "WidgetGroupRow",
          "widgets": [
            {
              "tag": "PERSON_GIVEN_NAME",
              "widgetType": "EditText",
              "dataType": "Text",
              "hint": "First name *",
              "regex":"[a-zA-Z]+",
              "errorMessage":"Should only contain alphabet characters",
              "required":true,
              "weight":1
            },
            {
              "tag": "MIDDLE_NAME",
              "widgetType": "EditText",
              "dataType": "Text",
              "hint": "Middle name ",
              "regex":"[a-zA-Z]+",
              "errorMessage": "Should only contain alphabet characters",
              "required": false,
              "weight": 1
            },
            {
              "tag": "PERSON_FAMILY_NAME",
              "widgetType": "EditText",
              "dataType": "Text",
              "hint": "Last name *",
              "regex":"[a-zA-Z]+",
              "required":true,
              "errorMessage":"Should only contain alphabet characters",
              "weight":1
            }
          ]
        },
        {
          "label": "Date of birth",
          "widgetType": "TextView",
          "textSize": 24,
          "weight": 1
        },
        {
          "tag":"PERSON_DOB",
          "widgetType":"DatePicker",
          "hint":"dd MMM yyyy",
          "textSize":24,
          "weight":1,
          "futureDate": "False",
          "errorMessage":"Date of birth cannot be left blank",
          "required":true
        }
      ]
    },
    {
      "title": "Contact Information",
      "widgets": [
        {
          "tag": "PERSON_PHONE",
          "label": "Phone",
          "widgetType": "EditText",
          "dataType": "Numeric",
          "hint": "Example 0967546754",
          "regex":"[0-9]+",
          "errorMessage":"Should only contain alphabet characters",
          "weight":1
        },
        {
          "label": "Address",
          "tag": "PERSON_ADDRESS",
          "widgetType": "EditText",
          "hint": "Plot number, Village, Street *",
          "regex":"[a-zA-Z0-9\\s\\W+]+",
          "errorMessage":"Should only contain alphanumeric characters",
          "weight":1,
          "required":true
        },
        {
          "widgetType": "WidgetGroupRow",
          "widgets": [
            {
              "tag": "nrc",
              "widgetType": "DistrictPicker",
              "weight": 1
            }
          ]
        }
      ]
    }
  ]
}