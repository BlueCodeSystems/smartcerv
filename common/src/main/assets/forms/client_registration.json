{
  "attributes": {
    "panelType":"form",
    "formType":"demographics",
    "submitLabel":"Submit"
  },
  "widgetGroup":[
    {
      "title":"Demographics",
      "widgets":[
        {
          "label":"Client's names",
          "widgetType":"TextView",
          "textSize":24,
          "weight":1
        },
        {
          "widgetType":"WidgetGroupRow",
          "widgets": [
            {
              "tag":"PERSON_GIVEN_NAME",
              "widgetType":"EditText",
              "hint": "First name",
              "regex":"[a-zA-Z]+",
              "errorMessage":"Should only contain alphabet characters",
              "weight":1
            },
            {
              "tag":"PERSON_FAMILY_NAME",
              "widgetType":"EditText",
              "hint": "Last name",
              "regex":"[a-zA-Z]+",
              "errorMessage":"Should only contain alphabet characters",
              "weight":1
            }
          ]
        },
        {
          "label":"Gender",
          "widgetType":"TextView",
          "textSize":24,
          "weight":1
        },
        {
          "tag":"PERSON_GENDER",
          "label":"Gender",
          "widgetType":"GenderPicker",
          "errorMessage":"Gender cannot be left blank",
          "textSize":24,
          "weight":1
        },
        {
          "label":"Date of birth",
          "widgetType":"TextView",
          "textSize":24,
          "weight":1
        },

        {
          "tag":"PERSON_DOB",
          "widgetType":"DatePicker",
          "hint":"dd MMM yyyy",
          "textSize":24,
          "weight":1,
          "errorMessage":"Date of birth cannot be left blank",
          "required":true
        }
      ]
    },
    {
    "title":"Contact Information",
      "widgets":[
        {
          "tag":"PERSON_PHONE",
          "label":"Phone",
          "widgetType":"EditText",
          "hint": "Example 0967546754",
          "regex":"[0-9]+",
          "errorMessage":"Should only contain alphabet characters",
          "weight":1
        },
        {
          "label":"Address",
          "tag":"PERSON_ADDRESS",
          "widgetType":"EditText",
          "hint": "Plot number, Village, Street",
          "regex":"[a-zA-Z0-9\\s]+",
          "errorMessage":"Should only contain alphabet characters",
          "weight":1
        },
        {
          "widgetType":"WidgetGroupRow",
          "widgets": [
            {
              "tag":"nrc",
              "widgetType":"DistrictPicker",
              "weight":1
            }
          ]
        }
      ]
  }]
}