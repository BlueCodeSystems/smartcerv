<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ricky.chen.bcit.ca.cameraapp.Filter.FilterActivity">

    <Button
        android:id="@+id/filterByDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search by date"
        android:onClick="filterDate"
        android:layout_marginBottom="82dp"
        android:layout_above="@+id/filterByLocation"
        android:layout_alignParentStart="true"
        android:layout_marginStart="136dp" />

    <Button
        android:id="@+id/filterByLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="search by location"
        android:onClick="filterLocation"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/filterByDate" />

    <Button
        android:id="@+id/filterByText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:text="search by text"
        android:onClick="filterText"
        android:layout_below="@+id/filterByLocation"
        android:layout_alignStart="@+id/filterByLocation" />
</RelativeLayout>
