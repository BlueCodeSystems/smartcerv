{
  "attributes": {
    "panelType": "form",
    "formType": "basic",
    "submitLabel": "Submit"
  },
  "widgetGroup": [
    {
      "title": "Facility Information",
      "widgets": [
        {
          "tag": "district",
          "widgetType": "DistrictLabel",
          "label": "District Name",
          "textSize": 18
        },
        {
          "tag": "facility",
          "widgetType": "FacilityLabel",
          "label": "Facility Name",
          "textSize": 18
        },
        {
          "tag": "provider",
          "widgetType": "ProviderLabel",
          "label": "Provider Name",
          "textSize": 18
        }
      ]
    },
    {
      "title": "Client Information",
      "widgets": [
        {
          "label": "NRC No.",
          "tag": "nrc",
          "widgetType": "NumericEditText",
          "dataType": "Numeric",
          "hint": "Example 145683/10/1",
          "weight": 1,
          "required":false
        },
        {
          "widgetType": "WidgetGroupRow",
          "widgets": [
            {
              "widgetType": "TextView",
              "label": "Client ID",
              "textSize": 18,
              "weight": 1
            },
            {
              "tag": "PATIENT_ID",
              "widgetType": "CCPIZEditText",
              "weight": 1,
              "regex":"([0-9A-Z]+)/DR/([0-9]+)/([0-9]+)",
              "required":true,
              "errorMessage":"Invalid identifier format, should be in MDR-TB format e.g UTH/DR/45/19"
            }
          ]
        },
        {
          "widgetType": "WidgetGroupRow",
          "widgets": [
            {
              "widgetType": "TextView",
              "label": "Client name",
              "textSize": 18,
              "weight": 1
            },
            {
              "tag": "PERSON_GIVEN_NAME",
              "widgetType": "EditText",
              "dataType": "Text",
              "hint": "First Name",
              "weight": 1
            },
            {
              "tag": "PERSON_FAMILY_NAME",
              "widgetType": "EditText",
              "dataType": "Text",
              "hint": "Last Name",
              "weight": 1
            }
          ]
        },
        {
          "widgetType": "WidgetGroupRow",
          "widgets": [
            {
              "tag": "PERSON_DOB",
              "label": "Date Of Birth",
              "widgetType": "DatePicker",
              "futureDate": "False",
              "weight": 1,
              "hint": "dd MMM yyyy"
            }
          ]
        },
        {
          "widgetType": "WidgetGroupRow",
          "widgets": [
            {
              "widgetType": "TextView",
              "label": "Phone",
              "textSize": 18,
              "weight": 1
            },
            {
              "tag": "phone",
              "widgetType": "EditText",
              "hint": "Example +260967546754",
              "dataType": "Numeric",
              "weight": 1
            }
          ]
        },
        {
          "widgetType": "WidgetGroupRow",
          "widgets": [
            {
              "widgetType": "TextView",
              "label": "Address",
              "textSize": 18,
              "weight": 1
            },
            {
              "tag": "PERSON_ADDRESS",
              "widgetType": "EditText",
              "hint": "Plot number, Village, Street",
              "weight": 1
            }
          ]
        }
      ]
    }
  ]
}