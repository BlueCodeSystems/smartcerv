<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="cervEnrollmentViewmodel" type="zm.gov.moh.cervicalcancer.submodule.enrollment.viewmodel.CervicalCancerEnrollmentViewModel"/>
        <variable name="regformdata" type="zm.gov.moh.common.submodule.registration.model.RegistrationFormData"/>
    </data>

    <ScrollView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:background="@color/card_detailing"
            tools:context=".submodule.registration.view.RegistrationActivity">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_border"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="Facility Information"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/light_teal"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/district"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="District"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/facility_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Facility Name"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/provider_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Provider Name"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_border"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="Client Information"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/light_teal"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/nrc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="National Registration Number (NRC)"
                    android:inputType="textPersonName"
                    android:text="@={regformdata.address1}" />

                <EditText
                    android:id="@+id/client_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Client ID (CCPPZ)"
                    android:inputType="textPersonName"
                    android:text="@={regformdata.district}" />

                <TextView
                    android:id="@+id/via_screening_date_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="VIA Screening date"
                    android:textColor="@color/darker_grey"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/via_screening_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{regformdata.dateOfBirth}"
                    android:hint="select date"/>

                <EditText
                    android:id="@+id/first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="First Name"
                    android:inputType="textPersonName"
                    android:text="@={regformdata.province}" />

                <EditText
                    android:id="@+id/last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Last Name"
                    android:inputType="textPersonName"
                    android:text="@={regformdata.province}" />

                <TextView
                    android:id="@+id/dob_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Date Of Birth"
                    android:textColor="@color/darker_grey"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/date_of_birth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="select date"
                        android:text="@{regformdata.dateOfBirth}" />

                    <TextView
                        android:id="@+id/age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:text="Age: 34"
                        android:textColor="@color/darker_grey"
                        android:textSize="18sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <EditText
                    android:id="@+id/phone_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Phone Number"
                    android:inputType="textPersonName" />


                <EditText
                    android:id="@+id/residential_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Residential Address"
                    android:inputType="textPersonName" />

            </LinearLayout>
            <Button
                android:id="@+id/sumit_reg_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_margin="5dp"
                android:background="@color/light_green"
                android:textColor="@color/white"
                android:text="Submit"/>
        </LinearLayout>
    </ScrollView>
</layout>