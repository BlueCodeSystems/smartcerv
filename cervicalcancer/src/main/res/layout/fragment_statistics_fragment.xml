<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".submodule.cervicalcancer.view.StatisticsFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/option_noFilter"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:text="No filter"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                android:textColor="@color/darker_grey"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/option_today"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:text="Today"

                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                android:textColor="@color/darker_grey"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/option_month"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/optionbackground"
                android:gravity="center"
                android:text="This month"
                android:layout_marginHorizontal="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                android:textColor="#F5FFFA"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/option_3months"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Last 3 months"
                android:layout_marginHorizontal="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                android:textColor="@color/darker_grey"
                android:textSize="20sp" />

        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="4"
            app:rowCount="4"
            app:alignmentMode="alignMargins"
            app:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_width="85dp"
                android:layout_height="100dp"
                android:layout_margin="15dp"
                app:cardBackgroundColor="#F5FFFA"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="0"
                app:layout_rowWeight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/totalRegistered"
                        android:layout_width="120dp"
                        android:layout_height="85dp"
                        android:width="50dp"
                        android:height="180dp"
                        android:gravity="center"

                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="35sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/totalRegisteredTxt"

                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:height="100dp"
                        android:paddingLeft="15dp"
                        android:text="Total clients enrolled" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="85dp"
                android:layout_height="150dp"
                android:layout_margin="15dp"
                app:cardBackgroundColor="#F5FFFA"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="0"
                app:layout_rowWeight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/totalPatientsSeen"
                        android:layout_width="100dp"
                        android:layout_height="85dp"
                        android:width="50dp"
                        android:height="180dp"
                        android:gravity="center"

                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="35sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/totalPatientsSeenTxt"

                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_margin="5dp"
                        android:height="100dp"
                        android:paddingLeft="15dp"
                        android:text="Total clients seen" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="131dp"
                android:layout_margin="15dp"
                app:cardBackgroundColor="#F5FFFA"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp"
                app:layout_column="2"
                app:layout_columnWeight="1"
                app:layout_row="0"
                app:layout_rowWeight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/totalScreened"
                        android:layout_width="100dp"
                        android:layout_height="85dp"
                        android:width="50dp"
                        android:height="180dp"
                        android:gravity="center"

                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="35sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/totalViaNegativeTxt"

                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_margin="5dp"
                        android:height="100dp"
                        android:paddingLeft="15dp"
                        android:text="Total clients screened" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="210dp"
                android:orientation="vertical"
                app:layout_column="0"
                app:layout_columnSpan="3"
                app:layout_columnWeight="1"
                app:layout_row="3"
                app:layout_rowWeight="1"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VIA screen results in last 5 days"
                    android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                    android:textColor="@color/darker_grey"
                    android:textSize="24sp" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </androidx.gridlayout.widget.GridLayout>


    </ScrollView>

</LinearLayout>
</FrameLayout>
